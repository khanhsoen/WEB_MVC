@model BaiTap5_61133801.Models.EmpModel
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_TrangChu.cshtml";
}

@{ Html.BeginForm();}
<table style="border:1px solid">
    <tr>
        <td colspan="3">
            <h2>THÔNG TIN THÀNH VIÊN ĐÃ ĐĂNG KÝ</h2>
        </td>
    </tr>
    <tr>
        <td rowspan="7">
            <div style="text-align:center">
                <img src="@ViewBag.Avatar" style="border-radius:50%" width="100" height="100" />
            </div>
        </td>
        <td>
            <div>Mã nhân viên:</div>
        </td>
        <td>
            <div>
                @ViewBag.EmpID
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div>Họ tên:</div>
        </td>
        <td>
            @ViewBag.Name
        </td>
    </tr>
    <tr>
        <td>
            <div>Ngày sinh:</div>
        </td>
        <td>
            @ViewBag.BirthOfDate
        </td>
    </tr>
    <tr>
        <td>
            <div>Email:</div>
        </td>
        <td>
            @ViewBag.Email
        </td>
    </tr>
    <tr>
        <td>
            <div>Mật khẩu:</div>
        </td>
        <td>
            @ViewBag.Password
        </td>
    </tr>
    <tr>
        <td>
            <div>Phòng ban:</div>
        </td>
        <td>
            @ViewBag.Department
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Quay lai", "RegisterEmp", "BaiTap5_61133801")
        </td>
    </tr>
</table>
@{ Html.EndForm();}


