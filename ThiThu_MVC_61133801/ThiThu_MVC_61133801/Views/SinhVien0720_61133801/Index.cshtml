@model IEnumerable<ThiThu_MVC_61133801.Models.SINHVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TrangChu.cshtml";
    string gtinh = "";
    int i = 0;
}

<h2>DANH SÁCH SINH VIÊN ĐĂNG KÝ</h2>

<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Mã sinh viên
        </th>
        <th>
            Họ sinh viên
        </th>
        <th>
            Tên sinh viên
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ảnh sinh viên
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Lớp
        </th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{i++;}
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @{if (item.GioiTinh == true)
                    { gtinh = "Nam"; }
                    else
                    { gtinh = "Nữ"; }
                }
                @gtinh

            </td>
            <td>
                <img src="~/Images/@item.AnhSV" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOP.MaLop)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSV }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaSV }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSV })
            </td>
        </tr>
    }

</table>
